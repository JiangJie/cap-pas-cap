@import "_layout";

::-webkit-input-placeholder {
    color: #999;
    font-size: .8rem;
}

.relative {
    position: relative;
}
.btn {
    display: block;
    width: 80%;
    height: 2.5rem;
    margin: .5rem auto;
    border-radius: .5rem;
    background: rgb(137, 195, 235);
    font-size: .9rem;
    color: #fff;
}
.page {
    width: 100%;

    .form {
        .input-wrap {
            height: 2rem;
            line-height: @height;
            border-top: 1px solid #DFDFDF;
        }
        .textarea-wrap {
            border-top: 1px solid #DFDFDF;
            border-bottom: 1px solid #DFDFDF;
        }
        .img-wrap {
            padding: 0 0 .5rem 1rem;
            border-bottom: 1px solid #DFDFDF;
            clearfix();

            .title {
                display: block;
                padding: .5rem 0;
            }
            .img {
                display: inline-block;
                width: 4rem;
                height: @width;
                background-size: @width @height;
                background-position: center;
                float: left;
                margin-right: .5rem;
            }
        }
        .input, textarea, option, .img-wrap .title {
            width: 100%;
            color: #666;
            font-size: .8rem;
        }
        .input {
            text-indent: 1rem;
        }
        input[type=file] {
            display: none;
        }
        textarea {
            padding: .5rem 1rem;
            height: 6rem;
        }
        .placeholder {
            display: inline-block;
            color: #666;
            font-size: .8rem;
            text-indent: 1rem;
        }
        .difficulty {
            display: inline-flex;
            position: absolute;
            top: 50%;
            right: 1rem;
            transform: translateY(-50%);
        }
        .icon-difficulty {
            display: inline-block;
            width: 1.75rem;
            height: @width;
            background-image: url(icon/difficulty.png);
            background-size: @width @height;

            &.active {
                background-image: url(icon/difficulty-active.png);
            }
        }
        .btn-add {
            display: inline-block;
            width: 3.8rem;
            height: @width;
            float: left;
            border: .1rem solid #d7d7d7;
            position: relative;

            &:before, &:after {
                content: "";
                display: inline-block;
                background: #d7d7d7;
                position: absolute;
                left: 50%;
                top: 50%;
                transform: translate(-50%, -50%);
            }
            &:before {
                width: 2.75rem;
                height: .1rem;
            }
            &:after {
                width: .1rem;
                height: 2.75rem;
            }
        }
    }
}