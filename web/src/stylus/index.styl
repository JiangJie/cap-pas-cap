@import "_layout";

.page {
    width: 100%;

    header {
        width: 100%;
        height: 8rem;
        position: fixed;
        top: 0;
        left: 0;
        padding: 1rem 1.25rem;
        background: url(img/ballon-bg.jpg);
        background-size: cover;
        background-position: center center;
        box-sizing: border-box;

        .search {
            background: rgba(255,255,255,.4);
            width: 100%;
            height: 2.5rem;
            border-radius: .5rem;
            position: relative;

            .icon-search {
                position: absolute;
                top: 50%;
                left: .75rem;
                transform: translateY(-50%);
                display: inline-block;
                width: 1.5rem;
                height: @width;
                background: url(icon/search.png);
                background-size: @width @height;
            }
            .input {
                width: 80%;
                position: absolute;
                top: 50%;
                left: 3rem;
                transform: translateY(-50%);
                background: transparent;
                font-size: 1.1rem;
                color: #fff;
            }
        }

        .icon-create {
            display: inline-block;
            width: 5.75rem;
            height: 1.75rem;
            border-radius: 1.25rem;
            background: rgba(255,255,255,.85);
            position: absolute;
            bottom: 1rem;
            right: 1.25rem;
            color: #298CCF;
            text-align: center;
            line-height: @height;
        }
    }

    footer {
        display: flex;
        width: 100%;
        position: fixed;
        left: 0;
        bottom: 0;
        margin-bottom: .5rem;

        .icon-menu {
            position: relative;
            flex: 1;
            /*width: 2rem;*/
            height: 2.75rem;
            background-size: 2rem 2rem;
            background-repeat: no-repeat;
            background-position: center;
            font-size: .75rem;
            color: #a1a1a1;

            &:after {
                position: absolute;
                bottom: -0.5rem;
                left: 50%;
                transform: translateX(-50%);
            }
            
            &.challenges {
                background-image: url(icon/challenges.png);
                &:after {
                    content: "Challenges";
                }
            }
            &.ranking {
                background-image: url(icon/ranking.png);
                &:after {
                    content: "Ranking";
                }
            }
            &.moment {
                background-image: url(icon/moment.png);
                &:after {
                    content: "Moments";
                }
            }
            &.profile {
                background-image: url(icon/profile.png);
                &:after {
                    content: "Profile";
                }
            }

            &:active, &.active {
                color: #89C3EB;
                
                &.challenges {
                    background-image: url(icon/challenges-active.png);
                }
                &.ranking {
                    background-image: url(icon/ranking-active.png);
                }
                &.moment {
                    background-image: url(icon/moment-active.png);
                }
                &.profile {
                    background-image: url(icon/profile-active.png);
                }
            }
        }
    }

    .main {
        position: relative;
        top: 8rem;
        .tabs {
            display: flex;
            width: 100%;
        }
        .tab {
            flex: 1;
            text-align: center;
            color: #a1a1a1;
            font-size: .9rem;
        }
    }
}