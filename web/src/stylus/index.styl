@import "_layout";
@import "_tabs";
@import "_footer";

body {
    overflow: hidden;
}

::-webkit-input-placeholder {
    color: #fff;
}

.page {
    width: 100%;

    header {
        width: 100%;
        height: 8rem;
        position: relative;
        padding: 1rem 1.25rem;
        background: url(img/ballon-bg.jpg);
        background-size: cover;
        background-position: center;
        box-sizing: border-box;

        .search {
            background: rgba(255,255,255,.4);
            width: 100%;
            height: 2.5rem;
            border-radius: .5rem;
            position: relative;

            .icon-search {
                position: absolute;
                top: 50%;
                left: .75rem;
                transform: translateY(-50%);
                display: inline-block;
                width: 1.5rem;
                height: @width;
                background: url(icon/search.png);
                background-size: @width @height;
            }
            .input {
                width: 80%;
                position: absolute;
                top: 50%;
                left: 3rem;
                transform: translateY(-50%);
                background: transparent;
                font-size: 1.1rem;
                color: #fff;
            }
        }

        .icon-create {
            display: inline-block;
            width: 5.75rem;
            height: 1.75rem;
            border-radius: 1.25rem;
            background: rgba(255,255,255,.85);
            position: absolute;
            bottom: 1rem;
            right: 1.25rem;
            color: #298CCF;
            text-align: center;
            line-height: @height;
            text-decoration: none;
        }
    }

    .main {
        position: relative;
        overflow-y: auto;

        .separation {
            height: .75rem;
            background: #F5F5F5;
        }

        .content {
            padding: .75rem;

            .title {
                border-left: .25rem solid black;
                text-indent: 1rem;
                font-size: 1.1rem;
            }

            .item {
                height: 10rem;
                background-size: cover;
                background-position: center;
                position: relative;
                margin-top: .75rem;
            }
            .detail {
                position: absolute;
                bottom: 0;
                width: 100%;
                background: rgba(255,255,255,.6);
            }
            .name {
                font-size: 1.1rem;
            }
            .icon-time {
                display: inline-block;
                width: 1rem;
                height: @width;
                background: url(icon/time.png);
                background-size: @width @height;
            }
            .icon-location {
                display: inline-block;
                width: .75rem;
                height: @width;
                background: url(icon/location.png);
                background-size: @width @height;
            }
            .time {
                color: #333;
                font-size: .7rem;
            }
            .price {
                color: #298CCF;
                font-size: 1.2rem;
            }
            .coins {
                color: #666;
                font-size: .7rem;
            }
            .location {
                font-size: .7rem;
            }
        }
    }
}