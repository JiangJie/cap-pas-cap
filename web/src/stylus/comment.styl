@import "_layout";

.page {
    .comments {
        padding: 1rem;
    }
    .comment {
        padding: .5rem 0;
        border-bottom: 1px solid #dfdfdf;

        &:first-child {
            padding-top: 0;
        }

        .info {
            display: flex;
        }
        .logo {
            width: 2.5rem;
            height: @width;
            border-radius: @width;
            background-position: center;
            background-size: @width @height;
            margin: 0 .5rem .5rem 0;
        }
        .nickname {
            font-size: .8rem;
            color: #333;
            line-height: 2.5rem;
        }
        .text {
            font-size: .7rem;
            color: #666;
            margin-bottom: .5rem;
        }
        .date {
            font-size: .7rem;
            color: #666;
        }
    }

    footer {
        position: fixed;
        bottom: 0;
        background: #eaeaea;
        width: 100%;
        padding: .5rem 1rem;

        input[type=text] {
            font-size: .8rem;
            padding: .5rem 0;
            color: #333;
            border-radius: .375rem;
            text-indent: .5rem;
            width: 70%;
        }
        input[type=submit] {
            width: 20%;
            font-size: 1rem;
            color: #333;
            background: transparent;
            text-align: center;
        }
    }
}