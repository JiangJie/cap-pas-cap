@import "_layout";

body {
    background: url(img/ballon-bg.jpg);
    background-size: cover;
}

.page {
    position: absolute;
    left: 1rem;
    right: 1rem;
    top: 1rem;
    bottom: 1rem;
    background: rgba(255, 255, 255, .6);
    padding: 0 1.75rem;

    .logo {
        text-align: center;
        padding: 2.5rem;
    }

    .account {
        .input {
            display: block;
            width: 100%;
            height: 3.5rem;
            border-radius: .5rem;
            background: rgba(137, 195, 235, .6);
            text-indent: .75rem;
            font-size: .9rem;
            color: #fff;

            &:first-child {
                margin-bottom: 1px;
            }
        }
        .btn {
            display: block;
            width: 5rem;
            height: 2.5rem;
            margin: 2.5rem auto 0 auto;
            border-radius: .5rem;
            background: rgb(137, 195, 235);
            font-size: .9rem;
            color: #fff;
        }
    }
    .other {
        margin-top: 2.25rem;
        .text {
            color: #999;
            font-size: .9rem;
        }
        .social {
            margin-top: 1rem;
            text-align: center;
        }
        .icon-social {
            display: inline-block;
            width: 2.5rem;
            height: @width;
            background-size: @width @height;
            margin-right: 1rem;

            &:last-child {
                margin-right: 0;
            }

            &.facebook {
                background-image: url(icon/facebook.png);
            }
            &.twitter {
                background-image: url(icon/twitter.png);
            }
            &.weibo {
                background-image: url(icon/weibo.png);
            }
            &.weixin {
                background-image: url(icon/weixin.png);
            }
        }
    }
}