@import "_layout";

.page {
    header {
        .tabs {
            display: flex;
            justify-content: space-between;
            width: 50%;
            margin: 0 auto;
        }
        .tab {
            flex: 1;
            width: 45%;
            text-align: center;
            font-size: 1.1rem;

            &.active {
                color: #298CCF;

                .bar {
                    background: #298CCF;
                }
            }

            .bar {
                width: 100%;
                height: .2rem;
                border-radius: @height;
            }
        }
    }
    .cover {
        height: 22.2rem;
        background-size: cover;
        background-position: center;
        margin-bottom: 2.05rem;
    }
    .name {
        text-align: center;
        font-size: 1.375rem;
        line-height: @font-size;
        color: #333;
        margin-bottom: 1.5rem;
    }
    .like {
        .btn {
            display: block;
            margin: 0 auto;
            width: 7.5rem;
            height: 2.125rem;
            border: 1px solid #298CCF;
            background: transparent;
            font-size: 1rem;
            color: #298CCF;
            border-radius: .375rem;
            position: relative;
            text-indent: 2rem;
            margin-bottom: 1.5rem;

            &:before {
                content: "";
                display: inline-block;
                width: 1.75rem;
                height: @width;
                background: url(icon/like.png);
                background-size: @width @height;
                position: absolute;
                top: 50%;
                left: .5rem;
                transform: translateY(-50%);
            }
        }
    }
    .separation {
        height: 1rem;
        background: #f5f5f5;
    }
    .info {
        font-size: 1.1rem;
        color: #666;
        
        .item {
            height: 3.75rem;
            line-height: @height;
            overflow: ellipsis;
            margin: 0 1rem;
            border-bottom: 1px solid #666;
            position: relative;

            &:last-child {
                border-bottom: none;
            }
        }
        .title {
            display: inline-block;
            width: 5rem;
        }
        .difficulty {
            display: inline-flex;
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
        }
        .icon-difficulty {
            display: inline-block;
            width: 1.75rem;
            height: @width;
            background-image: url(icon/difficulty.png);
            background-size: @width @height;

            &.active {
                background-image: url(icon/difficulty-active.png);
            }
        }
    }
    .desc {
        padding: 0 1rem;
        color: #666;

        .title {
            font-size: 1.1rem;
            margin: .75rem 0;
        }
        .detail {
            font-size: 1rem;
            margin-bottom: .5rem;
        }
        .img {
            height: 18.55rem;
            background-size: cover;
            background-position: center;
            margin-bottom: .5rem;
        }
    }
}