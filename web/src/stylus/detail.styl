@import "_layout";
@import "_tabs";
@import "_footer";

.page {
    > header {
        position: fixed;
        top: 0;
        z-index: 2;
        width: 100%;
        height: 2rem;
        background: #fff;
    }
    > .content {
        position: relative;
        top: 2.5rem;
        z-index: 1;
    }
    .detail {
        footer {
            position: fixed;
            bottom: 0;
            background: rgba(0, 0, 0, .75);
            z-index: 2;
            width: 100%;
            height: 3rem;
            color: #fff;
            display: flex;
            justify-content: space-around;
            align-items: center;

            .fee {
                font-size: .8rem;
            }
            .join {
                font-size: .7rem;
            }
            .btn {
                font-size: .8rem;
                color: #fff;
                width: 35%;
                height: 2rem;
                line-height: @height;
                border-radius: @height;
                background: #298CCF;
                text-decoration: none;
                text-align: center;

                &.disabled {
                    background: #666;
                }
            }
        }
    }
    .cover {
        height: 10rem;
        background-size: cover;
        background-position: center;
        margin-bottom: .5rem;
    }
    .name {
        text-align: center;
        font-size: .9rem;
        line-height: @font-size;
        color: #333;
        margin-bottom: .5rem;
    }
    .like {
        .btn {
            display: block;
            margin: 0 auto;
            width: 7.5rem;
            height: 2rem;
            border: 1px solid #298CCF;
            background: transparent;
            font-size: 1rem;
            color: #298CCF;
            border-radius: .375rem;
            position: relative;
            text-indent: 1.5rem;
            margin-bottom: .5rem;

            &:before {
                content: "";
                display: inline-block;
                width: 1.2rem;
                height: @width;
                background-image: url(icon/like.png);
                background-size: @width @height;
                position: absolute;
                top: 50%;
                left: .75rem;
                transform: translateY(-50%);
            }

            &.done:before {
                background-image: url(icon/like-done.png);
            }
        }
    }
    .info {
        font-size: .8rem;
        color: #666;
        border-top: .75rem solid #f5f5f5;
        
        .item {
            height: 2.5rem;
            line-height: @height;
            overflow: ellipsis;
            margin: 0 1rem;
            border-bottom: 1px solid #666;
            position: relative;

            &:last-child {
                border-bottom: none;
            }
        }
        .title {
            display: inline-block;
            width: 5rem;
        }
        .difficulty {
            display: inline-flex;
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
        }
        .icon-difficulty {
            display: inline-block;
            width: 1.75rem;
            height: @width;
            background-image: url(icon/difficulty.png);
            background-size: @width @height;

            &.active {
                background-image: url(icon/difficulty-active.png);
            }
        }
    }
    .desc {
        padding: 0 1rem;
        color: #666;
        border-top: .75rem solid #f5f5f5;
        margin-bottom: 3.5rem;

        .title {
            font-size: .9rem;
            margin: .75rem 0;
        }
        .text {
            font-size: .8rem;
            margin-bottom: .5rem;
        }
        .img {
            height: 10rem;
            background-size: cover;
            background-position: center;
            margin-bottom: .5rem;
        }
    }

    .moment, .review {
        > footer {
            position: fixed;
            bottom: 1rem;
            left: 50%;
            transform: translateX(-50%);
            .btn {
                display: block;
                width: 5rem;
                height: @width;
                border-radius: @width;
                background: #298CCF;
                position: relative;

                &:before, &:after {
                    content: "";
                    display: inline-block;
                    width: 2.5rem;
                    height: .4rem;
                    border-radius: @height;
                    background: #fff;
                    position: absolute;
                    top: 50%;
                    left: 50%;
                }
                &:before {
                    transform: translate(-50%, -50%);
                }
                &:after {
                    transform: translate(-50%, -50%) rotate(90deg);
                }
            }
        }
    }
    .moment {
        .winner {
            display: flex;
            align-items: center;
        }
        .icon-winner {
            display: inline-block;
            width: 2.5rem;
            height: @width;
            background: url(icon/winner.png);
            background-size: @width @height;
            margin-right: 1rem;
        }
    }

    .review {
        padding: 1rem;
        margin-bottom: 5rem;
        
        article {
            padding: .5rem;
            margin-bottom: .75rem;
            border-radius: .5rem;
            border: 1px solid #797979;
            clearfix();
            
            header {
                display: flex;
            }
            .logo {
                width: 2.5rem;
                height: @width;
                border-radius: @width;
                background-size: cover;
                background-position: center;
                margin-right: 1rem;
            }
            .nickname {
                font-size: .9rem;
                line-height: @font-size;
                color: #333;
                margin-top: .3rem;
            }
            .date {
                font-size: .7rem;
                line-height: @font-size;
                color: #666;
                margin-top: .3rem;
            }
            .content {
                padding-bottom: .5rem;
            }
            .imgs {
                display: flex;
                justify-content: space-between;
                align-items: center;
                flex-wrap: wrap;
                padding-top: .5rem;
            }
            .img {
                width: 32%;
                height: 5.5rem;
                margin-bottom: .3rem;
                background-size: cover;
                background-position: center;
            }
            .text {
                font-size: .7rem;
                color: #333;
            }
            footer {
                .action {
                    float: right;
                    margin-right: .5rem;
                }
                .icon {
                    display: inline-block;
                    width: 1rem;
                    height: @width;
                    background: url(icon/star.png);
                    background-size: @width @height;
                    background-position: center;
                    position: relative;
                    top: .2rem;
                }
                .icon-star {
                    background-image: url(icon/star.png);

                    &.done {
                        background-image: url(icon/like-done.png);
                    }
                }
                .icon-comment {
                    background-image: url(icon/comment.png);
                    margin-left: 1rem;
                }
                .num {
                    font-size: .8rem;
                    color: #999;
                }
                .comment {
                    color: #999;
                }
            }
        }
    }
}