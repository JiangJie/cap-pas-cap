footer {
    display: flex;
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
    margin-bottom: .5rem;

    .icon-menu {
        position: relative;
        flex: 1;
        /*width: 2rem;*/
        height: 2.75rem;
        background-size: 2rem 2rem;
        background-repeat: no-repeat;
        background-position: center;
        font-size: .75rem;
        color: #a1a1a1;

        &:after {
            position: absolute;
            bottom: -0.5rem;
            left: 50%;
            transform: translateX(-50%);
        }
        
        &.challenges {
            background-image: url(icon/challenges.png);
            &:after {
                content: "Challenges";
            }
        }
        &.ranking {
            background-image: url(icon/ranking.png);
            &:after {
                content: "Ranking";
            }
        }
        &.moment {
            background-image: url(icon/moment.png);
            &:after {
                content: "Moments";
            }
        }
        &.profile {
            background-image: url(icon/profile.png);
            &:after {
                content: "Profile";
            }
        }

        &:active, &.active {
            color: #89C3EB;
            
            &.challenges {
                background-image: url(icon/challenges-active.png);
            }
            &.ranking {
                background-image: url(icon/ranking-active.png);
            }
            &.moment {
                background-image: url(icon/moment-active.png);
            }
            &.profile {
                background-image: url(icon/profile-active.png);
            }
        }
    }
}