@import "nib";

html, body, section, div, h1, input, textarea, button, p, select, option, span, a {
    margin: 0;
    padding: 0;
    border: 0;
    outline: none;
    font-family: Helvetica,Arial,sans-serif;
    font-weight: normal;
    -webkit-appearance: none;
    -webkit-tap-highlight-color: transparent;
    /*transform: translateZ(0);*/
}

html, body, section, div, h1, input[type=submit], button, p, select, option, span, a {
    -webkit-user-select: none;
}

html {
    font-size: 125%;
    height: 100%;
    overflow-x: hidden;
}

body {
    width: 100%;
    height: 100%;
    overflow-x: hidden;
    /*-webkit-overflow-scrolling: touch;*/
    -webkit-backface-visibility: hidden;
    /*background: #fff;*/
}

textarea {
    resize: none;
}

a {
    text-decoration: none;
}