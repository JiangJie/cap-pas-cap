.hide {
    display: none;
}
.tabs {
    display: flex;
    padding: .75rem 1rem 0 1rem;
    border-bottom: .75rem solid #f5f5f5;
    justify-content: space-between;

    &:not(.justify) {
        .tab {
            flex: 1;
        }
    }
}
.tab {
    text-align: center;
    font-size: .9rem;

    &.active {
        color: #298CCF;

        .bar {
            display: block;
            background: #298CCF;
        }
    }

    .bar {
        display: none;
        width: 100%;
        height: .2rem;
        border-radius: @height;
    }
}