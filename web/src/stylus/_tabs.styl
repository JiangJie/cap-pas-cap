.hide {
    display: none;
}
.tabs {
    display: flex;
    padding: 0 1rem;
}
.tab {
    flex: 1;
    text-align: center;
    font-size: .9rem;

    &.active {
        color: #298CCF;

        .bar {
            display: block;
            background: #298CCF;
        }
    }

    .bar {
        display: none;
        width: 100%;
        height: .2rem;
        border-radius: @height;
    }
}