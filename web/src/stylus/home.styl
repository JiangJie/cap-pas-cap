@import "_layout";

.page {
    header {
        background: url(img/ballon-bg.jpg);
        background-size: cover;
        background-position: center;
        color: #fff;
        font-size: .9rem;
        padding: 0 1rem;

        span {
            display: inline-block;
        }
        
        .border-right {
            border-right: 1px solid #fff;
        }
        .logo {
            display: inline-block;
            width: 6.25rem;
            height: @width;
            border-radius: @width;
            background-size: @width @height;
            background-position: center;
        }
        .icon-crown {
            width: 2.5rem;
            height: @width;
            background: url(icon/crown.png);
            background-size: @width @height;
            background-position: center;
        }
        .icon-male {
            width: 1.75rem;
            height: 2.15rem;
            background: url(icon/male.png);
            background-size: @width @height;
            background-position: center;
        }
        .info {
            padding: .5rem 0;
        }
        .second {
            display: flex;
            border-top: 1px solid #fff;
        }
        .favorite {
            flex: 1;
            height: 2.5rem;
            background: url(icon/favorite.png) no-repeat;
            background-size: @height @height;
            padding-left: @height;
            text-align: center;
        }
        .ccoin {
            flex: 1;
            height: 2.5rem;
            background: url(icon/ccoin.png) no-repeat;
            background-size: @height @height;
            padding-left: @height;
            text-align: center;
        }
        .challenge {
            flex: 1;
            height: 2.5rem;
            background: url(icon/challenge.png) no-repeat;
            background-size: @height @height;
            padding-left: @height;
            text-align: center;
        }
    }
}