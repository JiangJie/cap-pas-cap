@import "_layout";
@import "_tabs";
@import "_footer";

.page {
    .ranking {
        margin-bottom: 3.5rem;
        .top3 {
            background: url(img/ballon-bg.jpg) no-repeat;
            background-position: center;
            position: relative;
            border: .5rem solid transparent;
            display: flex;
            padding: .75rem 1rem 2.75rem 1rem;

            &:before {
                content: "";
                display: block;
                width: 100%;
                height: 100%;
                background: rgba(255, 255, 255, .8);
                border: 1px solid #ccc;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }

            .item {
                flex: 1;
                position: relative;
                text-align: center;
            }
            .crown {
                display: inline-block;
                width: 2.5rem;
                height: @width;
                background-size: @width @height;
                background-position: center;
            }
            .icon-first {
                background-image: url(icon/first.png);
            }
            .icon-second {
                background-image: url(icon/second.png);
            }
            .icon-third {
                background-image: url(icon/third.png);
            }
            .logo {
                display: inline-block;
                width: 4rem;
                height: @width;
                border-radius: @width;
                background-size: @width @height;
                background-position: center;
                /*background-image: url(img/kfc.png);*/
            }
            .first {
                order: -1;
                top: 2rem;
            }
            .second {
                order: -2;
            }
            .name {
                font-size: .9rem;
                color: #333;
            }
            .participator {
                font-size: .8rem;
                color: #666;
            }
        }

        .me {
            background: #f5f5f5;
            color: #666;
            text-align: center;
            height: 2.5rem;
            line-height: @height;
            border-top: 1px solid #999;
            border-bottom: 1px solid #999;

            p {
                font-size: .7rem;
            }
        }

        .others {
            .item {
                padding: 0 .75rem;
                border-bottom: 1px solid #ccc;
                display: flex;
                height: 3.5rem;
                justify-content: space-between;
                align-items: center;
            }
            .left {
                display: flex;
                align-items: center;
            }
            .index {
                font-size: 1.5rem;
                color: #298CCF;
                margin-right: 1rem;
            }
            .logo {
                display: inline-block;
                width: 2.5rem;
                height: @width;
                border-radius: @width;
                background-size: @width @height;
                background-position: center;
                /*background-image: url(img/kfc.png);*/
                margin-right: 1rem;
            }
            .name {
                color: #333;
                font-size: .9rem;
                font-weight: bold;
            }
            .participator {
                font-size: .8rem;
                color: #666;
                white-space: nowrap;
                margin-left: .5rem;
            }
        }
    }
}