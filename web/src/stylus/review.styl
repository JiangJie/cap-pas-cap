@import "_layout";

.btn {
    display: block;
    width: 80%;
    height: 2.5rem;
    margin: .5rem auto;
    border-radius: .5rem;
    background: rgb(137, 195, 235);
    font-size: .9rem;
    color: #fff;
}
.page {
    padding: 1rem;

    textarea {
        display: block;
        width: 100%;
        height: 6rem;
        font-size: 1.05rem;
        color: #ababab;
    }
    input[type=file] {
        display: none;
    }
    .btn-add {
        display: inline-block;
        width: 4.45rem;
        height: @width;
    }
    .icon-add {
        display: inline-block;
        width: 4.25rem;
        height: @width;
        border: .1rem solid #333;
        position: relative;
/*        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);*/

        &:before, &:after {
            content: "";
            display: inline-block;
            background: #333;
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
        }
        &:before {
            width: 2.75rem;
            height: .1rem;
        }
        &:after {
            width: .1rem;
            height: 2.75rem;
        }
    }
}