@import "_layout";

.btn {
    display: block;
    width: 100%;
    height: 2.5rem;
    margin: .5rem auto;
    border-radius: .5rem;
    background: rgb(137, 195, 235);
    font-size: .9rem;
    color: #fff;
}
.page {
    padding: 1rem;

    textarea {
        display: block;
        width: 100%;
        height: 6rem;
        font-size: .8rem;
        color: #333;
        border: 1px solid #d7d7d7;
        margin-bottom: 1rem;
        padding: .5rem;
        box-sizing: border-box;
    }
    input[type=file] {
        display: none;
    }
    .img {
        display: inline-block;
        width: 4rem;
        height: @width;
        background-size: @width @height;
        background-position: center;
        float: left;
        margin-right: .5rem;
    }
    .btn-add {
        display: inline-block;
        width: 3.8rem;
        height: @width;
        border: .1rem solid #d7d7d7;
        position: relative;
/*        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);*/

        &:before, &:after {
            content: "";
            display: inline-block;
            background: #d7d7d7;
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
        }
        &:before {
            width: 2.75rem;
            height: .1rem;
        }
        &:after {
            width: .1rem;
            height: 2.75rem;
        }
    }
}